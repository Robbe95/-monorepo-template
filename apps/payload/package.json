{
  "name": "payload-app",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev -p 5173",
    "devturbo": "cross-env NODE_OPTIONS=--no-deprecation next dev --turbo",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "node ./server.js",
    "lint": "eslint",
    "ci": "pnpm build",
    "generate:types": "payload generate:types",
    "generate:schema": "payload-graphql generate:schema",
    "clean": "rm -rf node_modules && rm -rf .output && rm -rf .next && rm -rf .dist",
    "standalone-script": "node ./src/scripts/standalone-script.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@faceless-ui/window-info": "^2.1.2",
    "@payloadcms/db-mongodb": "3.11.0",
    "@payloadcms/db-postgres": "3.11.0",
    "@payloadcms/next": "3.11.0",
    "@payloadcms/plugin-search": "^3.11.0",
    "@payloadcms/plugin-seo": "^3.11.0",
    "@payloadcms/richtext-lexical": "3.11.0",
    "@payloadcms/richtext-slate": "3.11.0",
    "@payloadcms/storage-s3": "^3.11.0",
    "@payloadcms/ui": "3.11.0",
    "@shared/constants": "workspace:*",
    "@shared/utils": "workspace:*",
    "@trpc/server": "^10.45.2",
    "body-scroll-lock": "4.0.0-beta.0",
    "cross-env": "^7.0.3",
    "graphql": "^16.10.0",
    "jose": "^5.9.6",
    "next": "15.1.3",
    "payload": "3.11.0",
    "pkce-challenge": "^4.1.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "sharp": "0.33.5",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@types/body-scroll-lock": "^3.1.2",
    "@types/node": "^22.10.2",
    "@types/react": "19.0.2",
    "@types/react-dom": "19.0.2",
    "@wisemen/eslint-config-vue": "^0.2.3",
    "eslint": "^9.17.0",
    "eslint-config-next": "15.1.3",
    "typescript": "5.7.2"
  }
}
